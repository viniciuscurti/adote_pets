<div class="container mt-4">
  <div class="container pt-5">
    <div class="d-flex justify-content-center">
      <h2 class="mt-5">Animais Disponíveis</h2>
    </div>
  </div>
  <div class="row mt-5">
    <% if @pets.present? %>
      <% @pets.each do |pet| %>
        <% unless pet.adoption.present? %>
          <div class="col-6 mb-4">
            <div class="card-product">
              <%# <%= cl_image_tag pet.photo.key, height: 300, width: 400, crop: :fill %>
              <div class="card-product-infos">
                <h2><%= pet.name %></h2>
                <p><strong>Categoria:</strong> <%= pet.category %></p>
                <p><strong>Aniversário:</strong> <%= pet.birth %></p>
                <p><%= link_to "Detalhes", pet_path(pet), class: "btn btn-secondary" %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
    <p><%= link_to "Novo pet?", new_pet_path, class: "btn btn-success" %></p>
</div>